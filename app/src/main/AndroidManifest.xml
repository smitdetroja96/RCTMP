<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rctmp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RulesActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ShowDetailsActivity" android:screenOrientation="portrait"/>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".SuggestionsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ShowFavouritesActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".ScholarlyResourcesActivity"
            android:parentActivityName=".IntermediateActivity" android:screenOrientation="portrait" />
        <activity
            android:name=".RaxterSearchActivity"
            android:parentActivityName=".IntermediateActivity" android:screenOrientation="portrait"/>
        <activity android:name=".FinesActivity" android:screenOrientation="portrait"/>
        <activity android:name=".IssuedBooksActivity" android:screenOrientation="portrait"/>
        <activity android:name=".UserProfileActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ReadingHistoryActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ChangePasswordActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ChangedLayoutActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".OnlineResourceSearchActivity"
            android:parentActivityName=".IntermediateActivity" android:screenOrientation="portrait"/>
        <activity android:name=".IntermediateActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".WebSearchActivity"
            android:parentActivityName=".OnlineResourceSearchActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ViewDetails" android:screenOrientation="portrait"/>
        <activity android:name=".SearchingActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".DrawerActivityLayout"
            android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:process=":remote" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rctmp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ScholarlyResourcesActivity"></activity>
        <activity android:name=".ScholarlyResourcesSearchAcitvity" />
        <activity android:name=".RaxterSearchActivity" />
        <activity android:name=".FinesActivity" />
        <activity android:name=".IssuedBooksActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".ReadingHistoryActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".ChangedLayoutActivity" />
        <activity android:name=".OnlineResourceSearchActivity" />
        <activity android:name=".IntermediateActivity" />
        <activity
            android:name=".WebSearchActivity"
            android:parentActivityName=".OnlineResourceSearchActivity" />
        <activity android:name=".ViewDetails" />
        <activity android:name=".SearchingActivity" />
        <activity
            android:name=".DrawerActivityLayout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:process=":remote" />
    </application>

</manifest>
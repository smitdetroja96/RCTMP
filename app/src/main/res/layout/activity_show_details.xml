<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_details_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rc_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/toolbar_details_layout">
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_no_details"
        android:text="Opening Hours"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_no_details1"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_no_details"
        android:text="-> Monday to Friday"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_no_details2"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_no_details1"
        android:text="    -> 9:00 am to 9:00 pm"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_no_details3"
        android:layout_below="@id/tv_no_details2"
        android:layout_marginTop="5dp"
        android:text="-> Weekends, Holidays and Breaks"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_no_details4"
        android:layout_below="@id/tv_no_details3"
        android:layout_marginTop="5dp"
        android:text="    -> 9:00 am to 6:00 pm"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/tv_no_details5"
        android:layout_below="@id/tv_no_details4"
        android:text="Issue and Return Hours"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_no_details6"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_no_details5"
        android:text="-> Monday to Friday"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_no_details7"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_no_details6"
        android:text="    -> 9:00 am to 8:30 pm"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_no_details8"
        android:layout_below="@id/tv_no_details7"
        android:layout_marginTop="5dp"
        android:text="-> Weekends, Holidays and Breaks"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_no_details9"
        android:layout_below="@id/tv_no_details8"
        android:layout_marginTop="5dp"
        android:text="    -> 9:00 am to 5:30 pm"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/tv_no_details10"
        android:layout_below="@id/tv_no_details9"
        android:text="For In-Sem examinations, time is extended to 2:00 am for 1 week"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/tv_no_details11"
            android:layout_below="@id/tv_no_details10"
            android:text="For End-Sem examinations, time is extended to 2:00 am for 2 weeks"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rc_show">

        <WebView
            android:id="@+id/wv_details"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </WebView>


    </ScrollView>

</RelativeLayout>

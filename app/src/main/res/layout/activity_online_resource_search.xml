<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnlineResourceSearchActivity">

    <EditText
        android:id="@+id/et_search_text"
        android:hint="Search here..."
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_width="300dip"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/bt_searchWeb"
        android:src="@drawable/ic_search_1"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/rg_web_site_options"
        android:layout_marginTop="30dp"
        android:layout_below="@id/et_search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_bloomsbury"
            android:checked="true"
            android:text="Bloomsbury Design Library"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_jstor"
            android:text="JSTOR Online Archive"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <RadioButton
            android:id="@+id/rb_ieee"
            android:text="IEEE Xplore Digital Library"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_science_direct"
            android:text="ScienceDirect Computer Science Journals"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_springer"
            android:text="Springer Link"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb_usenix"
            android:text="Usenix Publications"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>


</RelativeLayout>